<p>
  <%= link_to new_post_path do %>
  Want to write a new post? Click here!
  <% end %>
</p>

<div class="container">
<% @posts.reverse.each do |post| %>
  <%= simple_format(post.message) %>
  <%= post.created_at.strftime("Posted on %d/%m/%Y") %>
  <%= link_to 'Edit', edit_post_path(post) %>
<% end %>
</div>
