<p>
  <img src="/newpost.png" alt="New post" height="150" width="150">
  <%= link_to new_post_path do %>
  Want to write a new post? Click here!<% end %>
</p>

<div class="container">
<% @posts.reverse.each do |post| %>
  <p><%= simple_format(post.message) %></p>
  <p><%= post.created_at.strftime("Posted on %d/%m/%Y") %></p>
  <p><%= post.user_id %></p>
  <p><%= link_to 'Edit', edit_post_path(post) %></p>
<% end %>


</div>
